{
  "name": "universidad-psm7-funcional",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && npm run copy:prisma",
    "copy:prisma": "xcopy /E /I /Y src\\generated dist\\src\\generated",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate:usuarios": "prisma generate --schema=prisma/usuarios/schema.prisma --config=prisma/usuarios/prisma.config.ts",
    "prisma:generate:carreras": "prisma generate --schema=prisma/carreras/schema.prisma --config=prisma/carreras/prisma.config.ts",
    "prisma:generate:profesor": "prisma generate --schema=prisma/profesor/schema.prisma --config=prisma/profesor/prisma.config.ts",
    "prisma:migrate:usuarios": "prisma migrate dev --name init_usuarios --schema=prisma/usuarios/schema.prisma --config=prisma/usuarios/prisma.config.ts",
    "prisma:migrate:carreras": "prisma migrate dev --name init_carreras --schema=prisma/carreras/schema.prisma --config=prisma/carreras/prisma.config.ts",
    "prisma:migrate:profesor": "prisma migrate dev --name init_profesor --schema=prisma/profesor/schema.prisma --config=prisma/profesor/prisma.config.ts",
    "prisma:seed:usuarios": "ts-node prisma/usuarios/seed-usuarios.ts",
    "prisma:seed:carreras": "ts-node prisma/carreras/seed-carreras.ts",
    "prisma:seed:profesor": "ts-node prisma/profesor/seed-profesor.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.2.0",
    "prisma-erd-generator": "^2.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
